# Merkaba Architecture Configuration
# Copy this to .env.local and fill in your values

# Merkaba Flow Direction
MERKABA_ARCHITECTURE=descending_flow
NEXT_PUBLIC_MERKABA_ARCHITECTURE=descending_flow

# MCP Server URLs (adjust ports as needed)
# Note: In production, these should point to your deployed MCP servers

# ◼︎ DOJO - Manifestation Apex (741 Hz)
DOJO_MCP_URL=http://localhost:7410

# ⬥ King's Chamber - Diamond Translation (852 Hz)
KINGS_CHAMBER_MCP_URL=http://localhost:8520

# ● OBI-WAN - Observer (963 Hz)
OBI_WAN_MCP_URL=http://localhost:9630

# ▲ ATLAS - Navigator (528 Hz)
ATLAS_MCP_URL=http://localhost:5280

# ▼ TATA - Temporal Anchor (432 Hz)
TATA_MCP_URL=http://localhost:4320

# ◻ Akron - Sovereignty Gateway (396 Hz)
AKRON_MCP_URL=http://localhost:3960

# Archive Configuration
# Path where Hollywood Production outputs are archived
AKRON_ARCHIVE_PATH=/Volumes/Akron/hollywood-output/

# For Vercel deployment, use environment variables:
# AKRON_ARCHIVE_PATH=/mnt/akron/hollywood-output/
# (or your cloud storage path)

# Video Rendering Configuration
MAX_VIDEO_DURATION=300
VIDEO_QUALITY=high
VIDEO_FORMAT=mp4

# API Configuration
API_TIMEOUT=60000
API_MAX_RETRIES=3

# Merkaba Geometry Validation
ENABLE_GEOMETRIC_COHERENCE_CHECK=true
VALIDATE_FREQUENCY_ALIGNMENT=true

# Sacred Frequencies (Hz)
FREQUENCY_AKRON=396
FREQUENCY_TATA=432
FREQUENCY_ATLAS=528
FREQUENCY_DOJO=741
FREQUENCY_KINGS_CHAMBER=852
FREQUENCY_OBI_WAN=963
